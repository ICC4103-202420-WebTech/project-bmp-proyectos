<h1>Courses</h1>

<h2>Latest Courses</h2>
<div class="row">
  <% if @latest_courses.present? %>
    <% @latest_courses.each do |course| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= course.title %></h5>
            <p class="card-text"><%= course.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No courses available at the moment.</p>
  <% end %>