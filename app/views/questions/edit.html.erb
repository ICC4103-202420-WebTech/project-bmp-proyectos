<h1>Edit Question</h1>

<%= form_with(model: [@course, @lesson, @forum, @question], local: true) do |form| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>
      <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content, "Question" %>
    <%= form.text_area :content, rows: 3 %>
  </div>

  <div class="actions">
    <%= form.submit "Update Question", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', course_lesson_forum_questions_path(@course, @lesson, @forum), class: 'btn btn-secondary' %>