<h1><%= @question.title %></h1>
<p><%= @question.content %></p>

<h2>Answers</h2>
<% @question.answers.each do |answer| %>
  <div>
    <p><%= answer.content %></p>
  </div>
<% end %>

<h3>Submit an Answer</h3>
<%= form_with(model: [@course, @lesson, @forum, @question, Answer.new], local: true) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="actions">
    <%= form.submit 'Submit Answer' %>
  </div>
<% end %>